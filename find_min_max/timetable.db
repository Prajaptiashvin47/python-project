import sqlite3

# Connect to SQLite
conn = sqlite3.connect("timetable.db")
cursor = conn.cursor()

# Create table
cursor.execute('''CREATE TABLE IF NOT EXISTS schedule (
                    id INTEGER PRIMARY KEY,
                    teacher TEXT,
                    subject TEXT,
                    time TEXT)''')

# Insert lecture
cursor.execute("INSERT INTO schedule (teacher, subject, time) VALUES (?, ?, ?)",
               ("Mr. Sharma", "Math", "10:00 AM"))

# Show lectures
cursor.execute("SELECT * FROM schedule")
rows = cursor.fetchall()
for row in rows:
    print(row)

# Update time
cursor.execute("UPDATE schedule SET time = ? WHERE teacher = ?",
               ("10:30 AM", "Mr. Sharma"))

# Delete lecture
cursor.execute("DELETE FROM schedule WHERE teacher = ?", ("Mr. Sharma",))

conn.commit()
conn.close()
print("Database operations completed!")
